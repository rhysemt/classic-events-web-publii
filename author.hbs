{{> head}}
{{> top}}

   {{#author}}
      <div class="page-header author-header">
         {{#if avatar}}
            <img 
                  src="{{avatar}}" 
                  {{ lazyload "lazy" }} 
                  class="avatar" 
                  alt="{{name}}">
         {{/if}}
         <h1>
            {{name}}
            {{#if @config.custom.postsCount}}
               <sup>({{postsNumber}})</sup>
            {{/if}}
         </h1>
         {{#if description}}
            <p>{{description}}</p>
         {{/if}}
         {{#if website}}
            <div class="author-website">
               <i class="fas fa-globe"></i>
               <a href="{{website}}" target="_blank" rel="nofollow noreferrer noopener">{{ translate 'author.visitWebsite' }}</a>
            </div>
         {{/if}}
      </div>
   {{/author}}

   <section>
       <div class="posts">
      {{#each posts}}
         <article>
            {{#if @config.custom.feedFeaturedImage}}
               {{#featuredImage}}
                  {{#if url}}
                     <a href="{{../url}}" class="image fit">
                        <img
                           src="{{url}}"
                           {{#if @config.site.responsiveImages}}
                              {{responsiveImageAttributes 'featuredImage' srcset.card sizes.card}}
                           {{/if}}
                           {{ lazyload "lazy" }}
                           height="{{height}}"
                           width="{{width}}"
                           alt="{{alt}}">
                     </a>
                  {{/if}}
               {{/featuredImage}}
            {{/if}}
            <h3>
               <a href="{{url}}">{{title}}</a>
            </h3>

            {{#if hasCustomExcerpt}}
               {{{ excerpt }}}
            {{else}}
               <p>{{{ excerpt }}}</p>
            {{/if}}

            {{#if @config.custom.feedReadMore}}
               <ul class="actions">
                  <li>
                     <a href="{{url}}" class="button">{{ translate 'common.more' }}</a>
                  </li>
               </ul>
            {{/if}}
         </article>
      {{/each}}
      </div>
   </section>

   {{> pagination}}

   </div>
</div>
    {{> sidebar}}
</div>

{{> footer}}